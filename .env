# KeLiva Python Backend Environment Variables

# ===========================================
# API KEYS (FREE SERVICES)
# ===========================================

# Groq API Configuration (FREE - 14,000 requests/day for 8B model)
GROQ_API_KEY=your_groq_api_key_here

# ElevenLabs API Configuration (High-quality TTS)
# Get your API key from: https://elevenlabs.io/
# Free tier: 10,000 characters/month
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# ===========================================
# MESSAGING INTEGRATIONS
# ===========================================

# Telegram Bot API Configuration (100% FREE - RECOMMENDED)
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# PostgreSQL Configuration (Production - Render.com)
DATABASE_URL=your_postgresql_connection_string_here

# Individual PostgreSQL components (parsed from DATABASE_URL)
DB_HOST=your_postgres_host
DB_PORT=5432
DB_NAME=keliva
DB_USER=your_postgres_user
DB_PASSWORD=your_postgres_password

# Legacy SQLite (not used with PostgreSQL)
# DB_PATH=./keliva.db

# ChromaDB (not used in simplified version)
# CHROMA_DB_PATH=./chroma_db

# ===========================================
# SERVER CONFIGURATION
# ===========================================

# Environment
ENVIRONMENT=development

# ===========================================
# FEATURE FLAGS (Simplified Version)
# ===========================================

# Enable/disable features (only essential features enabled)
ENABLE_GRAMMAR_GUARDIAN=true
ENABLE_VOICE_PRACTICE=true
ENABLE_CHAT_HISTORY=true

# ===========================================
# RATE LIMITING (FREE TIER LIMITS)
# ===========================================

# Groq API rate limits (per day)
GROQ_70B_DAILY_LIMIT=1000
GROQ_8B_DAILY_LIMIT=14000

# ===========================================
# SECURITY & MONITORING
# ===========================================

# CORS origins
CORS_ORIGINS=http://localhost:5173,https://keliva-app.pages.dev

# Session configuration
SESSION_SECRET=your-super-secret-session-key-change-this-in-production
SESSION_TIMEOUT=86400

# Logging
LOG_LEVEL=INFO
ENABLE_REQUEST_LOGGING=true

# Health check configuration
HEALTH_CHECK_INTERVAL=14

# ===========================================
# DEPLOYMENT & KEEP-ALIVE
# ===========================================

# Keep-alive configuration for 24/7 uptime
KEEP_ALIVE_ENABLED=true
KEEP_ALIVE_INTERVAL=840

# Security keys (generate new ones for production)
SECRET_KEY=your-super-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production

# Allowed origins and hosts for production
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://your-frontend-domain.vercel.app
ALLOWED_HOSTS=localhost,127.0.0.1,.onrender.com,.vercel.app